{
  "name": "vscode-hill",
  "displayName": "vscode-hill",
  "description": "Hill language support",
  "version": "0.0.2",
  "publisher": "hill-lang",
  "scripts": {
    "publish": "vsce publish"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": ["Programming Languages"],
  "repository": {
    "type": "git",
    "url": "https://github.com/hill-lang/vscode-hill.git"
  },
  "contributes": {
    "languages": [
      {
        "id": "hill",
        "aliases": ["Hill", "hill"],
        "extensions": [".hill"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "hill_c_text",
        "aliases": ["Hill Compiled"],
        "extensions": [".hill_c.txt"]
      }
    ],
    "grammars": [
      {
        "language": "hill",
        "scopeName": "source.hill",
        "path": "./syntaxes/hill.tmLanguage.json"
      },
      {
        "language": "hill_c_text",
        "scopeName": "source.hill.txt",
        "path": "./syntaxes/hill_c.txt.tmLanguage.json"
      }
    ]
  }
}
